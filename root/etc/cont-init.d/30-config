#!/usr/bin/with-contenv bash

# make folders
mkdir -p \
	/var/run/dbus

# delete existing pid if found
[[ -e /var/run/dbus/pid ]] && \
	rm -f /var/run/dbus/pid

#Â copy config
chown -R abc:abc \
	/defaults/DVBLink
PREV_DIR=$(pwd)

	cd /usr/local/bin/dvblink/config || exit
	shopt -s globstar nullglob
	for i in *
 	do
	[[ ! -e "/config/${i}" ]] && cp -v "${i}" "/config/${i}"
	done

	cd /defaults/DVBLink || exit
	shopt -s globstar nullglob
	for i in *
 	do
	[[ ! -e "/data/${i}" ]] && cp -prv "${i}" "/data/${i}"
	done
cd "${PREV_DIR}" || exit

[[ ! -L /opt/DVBLink ]] && \
 ln -s /data /opt/DVBLink

# permissions
chown -R abc:abc \
	/config \
	/usr/local/bin/dvblink

chown messagebus:messagebus \
	/var/run/dbus
dbus-uuidgen --ensure
sleep 1
